{
  "name": "stylelint-config-concision",
  "version": "0.0.3",
  "description": "Standard shareable stylelint config for Concision projects",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "standard"
  ],
  "author": "stylelint",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://git.concision.uk/concision/stylelint-config-concision.git"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "dependencies": {
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-order": "^1.0.0",
    "stylelint-prettier": "^1.0.5",
    "stylelint-scss": "^3.4.1",
    "stylelint-webpack-plugin": "^0.10.5"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-stylelint": "^11.0.0",
    "jest": "^23.4.1",
    "jest-preset-stylelint": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "npmpub": "^4.1.0",
    "remark-cli": "^6.0.0",
    "remark-preset-lint-consistent": "^2.0.0",
    "remark-preset-lint-recommended": "^3.0.0"
  },
  "peerDependencies": {
    "stylelint": "^8.3.0 || ^9.0.0"
  },
  "scripts": {
    "dry-release": "npmpub --dry --verbose",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "release": "npmpub",
    "test": "jest",
    "watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "jest": {
    "preset": "jest-preset-stylelint"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  }
}
